# Blazt WhatsApp Service Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3001

# Laravel App Configuration
LARAVEL_APP_URL=http://localhost:8000
WEBHOOK_SECRET=blazt-webhook-secret

# Logging Configuration
LOG_LEVEL=info

# Session Storage (optional - defaults will be used if not set)
SESSIONS_DIR=../storage/app/whatsapp-sessions
QR_CODES_DIR=../storage/app/public/qr-codes

# Rate Limiting (optional)
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=60

# WhatsApp Configuration
WHATSAPP_TIMEOUT=30000
WHATSAPP_MAX_RETRIES=3

# Security
CORS_ORIGIN=http://localhost:8000
